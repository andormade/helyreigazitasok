{% assign secondsBetweenDates = seconds1 | minus: seconds2 %}
{% assign minutesBetweenDates = secondsBetweenDates | divided_by: 60 %}
{% assign hoursBetweenDates = minutesBetweenDates | divided_by: 60 %}
{% assign daysBetweenDates = hoursBetweenDates | divided_by: 24 %}

